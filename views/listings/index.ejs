<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toogle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
  }

</style>

<div id="filters">
  <div class="filter" data-url="https://wanderlust-uapl.onrender.com/listings/66c57c33d602c314d8b84818">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter" data-url="https://wanderlust-uapl.onrender.com/listings/66c581fed602c314d8b8484c">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter" data-url="https://wanderlust-uapl.onrender.com/listings/66c581a4d602c314d8b84846">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </div>
  <div class="filter" data-url="https://wanderlust-uapl.onrender.com/listings/66c58943d602c314d8b848a8">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter" data-url="https://wanderlust-uapl.onrender.com/listings/66c57d7bd602c314d8b84821">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter" data-url="https://wanderlust-uapl.onrender.com/listings/66c57c33d602c314d8b84818">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing pools</p>
  </div>
  <div class="filter" data-url="https://wanderlust-uapl.onrender.com/listings/66c582c9d602c314d8b8485a">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </div>
